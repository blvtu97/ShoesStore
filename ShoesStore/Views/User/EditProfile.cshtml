@model Model.EF.User

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<link href="~/Assets/Client/css/user.css" rel="stylesheet" />
<section>
    <div class="container">
        <div id="user-pf-wrapper">
            <div id="left-panel-user">
                <div id="avatar-name">
                    <img src="./img/gallery/r2.jpg" alt="">
                    <label class="font-weight-bold">@Model.Name</label>
                </div>
                <ul>
                    <li>
                        <a href="/User/Profile"><span><i class="fas fa-home"></i></span> Account overview</a>
                    </li>
                    <li>
                        <a href="#"><span><i class="fas fa-pen"></i></span> Edit profile</a>
                    </li>
                    <li>
                        <a href="/User/ResetPassword"><span><i class="fas fa-lock"></i></span> Change password</a>
                    </li>
                    <li>
                        <a href="#"><span><i class="fas fa-shopping-cart"></i></span> My cart</a>
                    </li>
                </ul>
            </div>
            <div id="right-panel-user">
                <div class="user-info">
                    <label class="font-weight-bold">Edit your profile</label>
                    <form action="">
                        <div class="form-group">
                            <label>User name</label>
                            <input type="text" class="form-control" disabled value="@Model.Name">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" disabled value="@Model.Email">
                        </div>
                        <div class="form-group">
                            <label>Phone number</label>
                            <input type="text" class="form-control" value="@Model.Phone">
                        </div>
                        <div class="form-group">
                            <label>Date of birth</label>
                            <input type="date" class="form-control" value="@Convert.ToDateTime(Model.DayOfBirth).ToString("yyyy-MM-dd")">
                        </div>
                    </form>
                    <button>SAVE</button>
                    <button class="btn-light">CANCEL</button>
                </div>

            </div>
        </div>

    </div>
</section>

