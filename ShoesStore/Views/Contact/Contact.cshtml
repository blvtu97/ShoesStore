                        },
                        { elementType: 'labels.text.fill', stylers: [{ color: '#A3A3A3' }] }
                    ];

                    map = new google.maps.Map(document.getElementById('map'), {
                        center: { lat: 10.8662071, lng: 106.7775638 },
