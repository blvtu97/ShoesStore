@model Model.EF.User

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<link href="~/Assets/Client/css/user.css" rel="stylesheet" />
<section>
    <div class="container">
        <div id="user-pf-wrapper">
            <div id="left-panel-user">
                <div id="avatar-name">
                    <img src="./img/gallery/r2.jpg" alt="">
                    <label class="font-weight-bold">@Model.Name</label>
                </div>
                <ul>
                    <li>
                        <a class="p-3" href="/User/ViewProfile"><span><i class="fas fa-home"></i></span> Account overview</a>
                    </li>
                    <li>
                        <a class="p-3" href="/User/EditProfile"><span><i class="fas fa-pen"></i></span> Edit profile</a>
                    </li>
                    <li>
                        <a class="p-3" href="/User/ResetPassword"><span><i class="fas fa-lock"></i></span> Change password</a>
                    </li>
                    <li>
                        <a class="p-3" href="#"><span><i class="fas fa-shopping-cart"></i></span> My cart</a>
                    </li>
                </ul>
            </div>
            <div id="right-panel-user">
                <div class="user-info">
                    <label class="font-weight-bold">Edit your profile</label>
                    <form action="/User/EditProfile" method="post">
                        @Html.HiddenFor(m => m.UserID)
                        <div class="form-group">
                            <label>User name</label>
                            <input type="text" class="form-control" value="@Model.Name" name="Name">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" value="@Model.Email" name="Email">
                        </div>
                        <div class="form-group">
                            <label>Phone number</label>
                            <input type="text" class="form-control" value="@Model.Phone" name="Phone">
                        </div>
                        <div class="form-group">
                            <label>Date of birth</label>
                            <input type="date" class="form-control" value="@Convert.ToDateTime(Model.DayOfBirth).ToString("yyyy-MM-dd")" name="DayOfBirth">
                        </div>
                        <button type="submit">SAVE</button>
                        <button type="reset" class="btn-light">CANCEL</button>
                    </form>

                </div>

            </div>
        </div>

    </div>
</section>

