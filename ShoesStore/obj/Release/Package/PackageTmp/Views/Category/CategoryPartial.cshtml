@model List<Model.EF.Category>

<div class="sidebar-categories">
    <div class="head">Browse Categories</div>
    <ul class="main-categories">
        <li class="common-filter">
            <form action="#">
                <ul class="categorination">
                    <li class="filter-list"><a href="#" data-categoryid="">ALL (@ViewBag.ALL)</a></li>
                    @foreach (var item in Model)
                    {
                        if (item.CategoryID == 1)
                        {
                            <li class="filter-list"><a href="#" data-categoryid="@item.CategoryID">@item.CategoryName (@ViewBag.MEN)</a></li>
                        }
                        else if (item.CategoryID == 2)
                        {
                            <li class="filter-list"><a href="#" data-categoryid="@item.CategoryID">@item.CategoryName (@ViewBag.WOMEN)</a></li>
                        }
                        else
                        {
                            <li class="filter-list"><a href="#" data-categoryid="@item.CategoryID">@item.CategoryName (@ViewBag.KIDS)</a></li>
                        }

                    }

                </ul>
            </form>

        </li>
    </ul>
</div>








